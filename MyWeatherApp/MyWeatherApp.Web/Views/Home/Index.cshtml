@model MyWeatherApp.Models.MyWeather

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Weather Forecast</h1>
    
</div>

<div class="text-center">
    @if (Model ==null)
    { 
        <form asp-controller="Home" asp-action="Index" method="get">
            <h1>
                City :
                <input type="text" name="SearchString">
                <button type="submit" class="btn btn-success">Search</button>
            </h1>
        </form>
       
    }
    else
    {
    <div style="width:20%; margin: auto;">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-white bg-primary">@Model.City</h5>
                <h3 class="card-text text-danger bg-light">@Model.MaxTemp</h3>
                <h3 class="card-text text-info bg-light">@Model.MinTemp</h3>
                <h3 class="card-text text-white bg-primary">@Model.Date</h3>
            </div>

        </div>
        
    </div>
    }
</div>
